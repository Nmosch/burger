<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Eat-Da-Burger!</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger_name}}
                    <button type="button" class="devoured" data-id={{id}}>Devour</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-4">
            <img src="" alt="">
            <form>
                <input id="newBurger" type="text">
                <button id="addBurger">Add burger</button>
            </form>
        </div>

        <div class="col-4">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>